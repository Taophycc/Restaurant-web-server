{
  "compilerOptions": {
    /* 1. Environment Setup */
    "target": "ES2022" /* Modern Node.js features */,
    "module": "commonjs" /* Standard Node module system */,
    "moduleResolution": "node" /* Fixes import issues */,
    "esModuleInterop": true /* Allows 'import Fastify from "fastify"' */,
    "forceConsistentCasingInFileNames": true,
    "strict": true /* Safety on */,
    "skipLibCheck": true,

    /* 2. Deployment Critical Settings */
    "outDir": "./dist" /* Puts compiled JS in the 'dist' folder */,
    "sourceMap": true /* Helpful for debugging errors */
  },

  /* 3. Scope */
  "include": ["src/**/*"] /* Only compile files inside src */,
  "exclude": ["node_modules"] /* Don't touch library files */
}
